#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &default_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;
 // NOTE THAT THE PHYSICAL POSITION OF THE `LSW(L/R)` toggle switch IS TO THE INSIDE OF SW05, IT IS REPRESENTED IN THE OUTER COLUMN
 // LSWL is kil :(
 //      | LSWL | SW01  | SW02  | SW03  | SW04  | SW05  |  | SW05  | SW04  | SW03  | SW02  | SW01  | LSWR |
 //      | SW17 | SW06  | SW07  | SW08  | SW09  | SW10  |  | SW10  | SW09  | SW08  | SW07  | SW06  | SW17 |
 //      | SW16 | SW11  | SW12  | SW13  | SW14  | SW15  |  | SW15  | SW14  | SW13  | SW12  | SW11  | SW16 |
 //                             | SW18  | SW19  | SW20  |  | SW20  | SW19  | SW18  |
// column: on left: column#, on right: 10-column#
         map = <
                 RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(1,5)
         RC(3,1) RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(3,9)
         RC(3,0) RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(3,10)
                                 RC(3,2) RC(3,3) RC(3,4)    RC(3,6) RC(3,7) RC(3,8)
         >;
     };


    kscan0: kscan_0 {
        diode-direction = "col2row";
    };

    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "TOTEM";

